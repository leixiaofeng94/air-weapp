/**index.wxss**/
.top-content{
  width: 100%;
  height: 500rpx;
  background-image: url(https://6c78-lxf-test-ae1u7-1302596755.tcb.qcloud.la/assets/images/home1.jpg?sign=cfd53e4e0e6657891c4b7178825e7ff5&t=1594346584);

}
.panel-container-shadow{
  box-shadow: 0 2px 12px 0 rgba(0,0,0,.1);
}
.locate-btn{
  background-color: transparent;
  padding: 20rpx;
  line-height: 38rpx;
  font-size: 38rpx;
}
.locate-icon{
  margin-top: 5rpx;
}

.selection {
  display: flex;
  width: 100%;
  flex-direction: column;
  margin-top: 10rpx;
}
 
.item_letter {
  display: flex;
  background-color: #f5f5f5;
  height: 40rpx;
  padding-left: 34rpx;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}
 
.item_city {
  display: flex;
  background-color: #fff;
  height: 100rpx;
  padding-left: 34rpx;
  align-items: center;
  border-bottom: 1rpx solid #ededed;
  font-size: 24rpx;
  color: #666;
}
 
.hotcity-common {
  font-size: 24rpx;
  color: #666;
  padding: 0 0 0 30rpx;
}
 
.top-view {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0 20rpx 30rpx;
  line-height: 50rpx;
}
.locate-view{
  display: flex;
  align-items: center;
  font-size: 32rpx;
  text-align: center;
  min-width: 150rpx;
}
 .locate-img{
   display: inline-block;
   width: 50rpx;
   height: 50rpx;
 }
 .updatetime-view{
  font-size: 30rpx;
  color: #555;
  padding-right: 10rpx;
 }
 .main-num{
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  margin-top: 60rpx;  
 }
 .num-badge{
  font-size: 32rpx;
  background-color: yellow;
  border-radius: 50rpx;
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  line-height: 50rpx;
  margin: -8px 0 9px 5px;
  position: absolute;  
 }
 .num-aqi{
   font-size: 80rpx;
 }
 .aqi-btn{
  background-color: #fff;
  color: #43ce17;
  width: 200rpx;
  line-height: 50rpx;
  margin: 10rpx auto;
  border-radius: 35rpx;  
 }
.thishotText {
  color: #2ab4ff;
  font-size: 20rpx;
  margin: 0 !important;
}
 
.slectCity {
  border-color: #2ab4ff !important;
}
 
.slectCity view {
  color: #2ab4ff !important;
}
 
.weui-grid {
  position: relative;
  float: left;
  padding: 10rpx 0;
  width: 149.5rpx;
  box-sizing: border-box;
  border: 1rpx solid #ececec;
  border-radius: 8rpx;
  margin: 10rpx 12rpx;
}
 
.weui-grid__label {
  display: block;
  text-align: center;
  color: #333;
  font-size: 24rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.num-content{
  width: 96%;
  margin: auto;
  height: 160rpx;
  background: white;
  line-height: 80rpx;
  margin-top: -70rpx;
  font-size: 24rpx;
  text-align: center;
  box-shadow: 0 2px 12px 0 rgba(0,0,0,.1);
}
.chart-content{
  width: 96%;
  margin: auto;
  margin-top: 20rpx;
  height: 360rpx;
  background: white;
  line-height: 60rpx;
  box-shadow: 0 2px 12px 0 rgba(0,0,0,.1);
}
.chart-title{
  display: flex;
  padding: 0 20rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #eee;
  justify-content: space-between;
}
.predict-content{
  height: 330rpx;
  text-align: center;
}
.chart-view{
  height: 300rpx;
  line-height: 40rpx;
}
.predict-view{
  font-size: 22rpx;
}
.pollution-level-grad{
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 25rpx;
  color: #fff;
  margin:0 10rpx;
  background-image: linear-gradient(to right, #43ce17 , #efdc31);
}
.pollution-level-green{
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 25rpx;
  color: #fff;
  margin:0 10rpx;
  background-color: #43ce17;
}